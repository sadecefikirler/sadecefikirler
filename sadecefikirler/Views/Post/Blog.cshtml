@using Microsoft.AspNet.Identity
@using sadecefikirler.Models;
@using sadecefikirler.ViewModels;
@model List<sadecefikirler.Models.Post>

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/Blog.cshtml";
}


    <div class="container be-detail-container">
        <h2 class="content-title">FİKİRLER</h2>
        <div class="blog-wrapper blog-grid">
            <div class="blog-filter">
               @foreach (var post in Model)
               {
                   foreach (var item in post.Categories)
                   {
                    <a class="btn color-4 size-2 hover-9">@item.Name</a>
                   }
               }
            </div>

            <div class="row">
@foreach (var post in Model)
{
                <div class="grid-item col-xs-12 col-sm-6 col-md-4">
                    <div class="blog-post">
                        <div class="post-header clearfix">
                            <div class="post-date">
                                <i class="fa fa-clock-o"></i> @post.PublishDate
                            </div>
                            <div class="author-post">
                                <img src="~/Content/img/a1.png" alt="" class="ava-author">
                                <span>by <a href="blog-detail-2.html">@User.Identity.Name</a></span>
                            </div>
                        </div>
                        <a class="post-preview post-image" href="blog-detail.html"><img class="img-responsive img-full" src="~/Content/img/@post.Picture" alt=""></a>
                        <div class="post-desc">
                            <div class="post-category">
                                @foreach (var category in post.Categories)
                                {
                                    @category.Name
                                }
                            </div>
                            <a class="post-label" href="blog-detail.html">@post.Title</a>
                            <div class="post-text">@post.Content</div>
                            <a class="btn color-1 size-2 hover-1" href="blog-detail.html">Read more</a>
                            <div class="info-block">
                                <span><i class="fa fa-thumbs-o-up"></i> 360</span>
                                <span><i class="fa fa-eye"></i> 789</span>
                                <span><i class="fa fa-comment-o"></i> 20</span>
                            </div>
                        </div>
                    </div>
                </div>
}
            </div>
        </div>
    </div>

  

