@using Microsoft.AspNet.Identity
@model List<sadecefikirler.Models.Post>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var post in Model)
{
    if (@post.Active==true)
    {
        <div class="category-1 mix custom-column-5">
            <div class="be-post">
                <a href="page1.html" class="be-img-block">
                    <img src="~/Content/img/p1.jpg" alt="omg">
                </a>
                <a href="page1.html" class="be-post-title">@post.Title</a>
                <span>
                    @foreach (var category in post.Categories.ToList())
                    {
                        <a href="blog-detail-2.html" class="be-post-tag">@category.Name</a>
                    }

                    @*<a href="blog-detail-2.html" class="be-post-tag">UI/UX</a>,
                        <a href="blog-detail-2.html" class="be-post-tag">Web Design</a>*@
                </span>
                <div class="author-post">
                    <img src="~/Content/img/a1.png" alt="" class="ava-author">
                    <span>by <a href="page1.html">@User.Identity.GetUserName()</a></span>
                </div>
                <div class="info-block">
                    @*<span><i class="fa fa-thumbs-o-up"></i> 360</span>
                        <span><i class="fa fa-eye"></i> 789</span>
                        <span><i class="fa fa-comment-o"></i> 20</span>*@
                    <span><i class="fa fa-comment-o"></i> @post.PublishDate</span>
                </div>
            </div>
        </div>
    }
    
}
